{% extends 'base.html.twig' %}

{% block title %}
    Авторизация
{% endblock %}

{% block body %}
    <div class="form">
        <form method="post" action="{{ path('authorization') }}">
            {% if error is not null %}<div>{{ error }}</div> {% endif %}
            <h1>Вход</h1>
            <div class="input-form">
                <input name="login" type="text" placeholder="Логин">
            </div>
            <div class="input-form">
                <input name="password" type="password" placeholder="Пароль">
            </div>
            <div class="input-form">
                <input type="submit" value="Войти">
            </div>
        </form>
        <a href="#" class="forget">Забыли пароль?</a>
    </div>
{% endblock %}

{% block styles %}
    <style>
        body {
            background: linear-gradient(rgba(0,0,0,.3),rgba(0,0,0,.3)), url(1.jpg);
            -webkit-background-size: cover;
            background-size: cover;
            background-attachment: fixed;
            font-family: sans-serif;
        }

        .form {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #3377adeb;
        }

        .form h1 {
            margin: 30px 100px;
            padding: 0;
            text-align: center;
            color: #FFFFFF;
            font-size: 30px;
            text-transform: uppercase;
        }

        .input-form {
            margin: 15px 40px;
            text-align: center;
        }

        .input-form input{
            padding: 10%;
            width: 100%;
            color: #FFFFFF;
            font-size: 20px;
            background: none;
            outline: none;
            border: 1px solid #FFFFFF;
            box-sizing: border-box;
        }

        .input-form input[type="text"]:focus, .input-form input[type="password"]:focus{
            border: 1px solid #AAAAAA;
        }

        .input-form input[type="submit"]{
            margin-top: 20px;
            color: #FFFFFF;
            font-weight: bold;
            text-transform: uppercase;
            border: none;
            background: #66e0b7bf;
            transition: .3s;
        }

        .input-form input[type="submit"]:hover{
            background: aquamarine;
        }

        .form a{
            display: block;
            padding: 0 0 30px;
            text-align: center;
            color: aqua;
            text-decoration: none;
            transition: .3s;
        }

        .form a:hover{
            color: #77a9cc;
        }
    </style>
{% endblock %}
