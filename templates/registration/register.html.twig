{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="form">
        <h1>регистрация</h1>

        {{ form_start(registrationForm) }}
        <div class="input-form">
            {{ form_row(registrationForm.email, { 'attr': {'class': 'input-form', 'placeholder': 'почта'} }) }}
        </div>
        <div class="input-form">
            {{ form_row(registrationForm.name, {'attr':{'class':'input-form', 'placeholder': 'имя'}}) }}
        </div>
        <div class="input-form">
            {{ form_row(registrationForm.login, {'attr':{'class':'input-form', 'placeholder': 'login'}}) }}
        </div>
        <div class="input-form">
            {{ form_row(registrationForm.plainPassword, {'attr':{'class':'input-form', 'placeholder': 'пароль'}}) }}
        </div>
        <div class="input-form">
            <input type="submit" value="Зарегистрироваться">
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

{% block styles %}
    <style>
        body {
        background: linear-gradient(rgba(0,0,0,.3),rgba(0,0,0,.3)), url(1.jpg);
        background-size: cover;
        }

        .form {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: #3377adeb;
            border-radius: 15px;
            height: 450px;
            width: 350px;
        }

        .form h1 {
            margin: 30px 43px;
            padding: 0;
            text-align: center;
            color: #FFFFFF;
            font-size: 30px;
            text-transform: uppercase;
        }

        .input-form {
            margin: 7px 18px;
            text-align: center;
        }

        .input-form input{
            padding: 2.5%;
            width: 90%;
            color: white;
            font-size: 20px;
            background: none;
            outline: none;
            border: 1px solid #FFFFFF;
            box-sizing: border-box;
            border-radius: 15px;
        }

        .input-form input[type="text"]:focus, .input-form input[type="password"]:focus{
            border: 1px solid #AAAAAA;
        }

        .input-form input[type="submit"]{
            margin-top: 20px;
            color: #FFFFFF;
            font-weight: bold;
            text-transform: uppercase;
            border: none;
            background: #66e0b7bf;
            transition: .3s;
            border-radius: 15px;
        }

        .input-form input[type="submit"]:hover{
            background: aquamarine;
        }

        .form a{
            display: block;
            padding: 0 0 30px;
            text-align: center;
            color: aqua;
            text-decoration: none;
            transition: .3s;
        }

        .form a:hover{
            color: #77a9cc;
        }
    </style>
{% endblock %}
